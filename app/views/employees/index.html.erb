<div class="container">
  <div class="user-header row">
    <div class="three columns"><h5>Hi, <%= @current_user.first_name %>!</h5></div>
    <div class="six columns"><h2>Employees</h2>
    <%= button_to 'Manage Menu', profile_path, method: :get, class: 'nav-b'%></div>
    <div class="three columns"><%= button_to 'Log Out', sessions_path, class: 'logout-b', method: :delete %></div>
  </div>
  <div class="new-item row">
    <div class="offset-by-four four columns"><h3>New Employee</h3></div>
  </div>
  <div class="new-item-form row">
    <%= form_for @employee do |f| %>
      <div class="two columns"><%= f.label 'Position' %>
      <%= f.select(:position, ['Server', 'Cook', 'Host'])%></div>
      <div class="two columns"><%= f.label 'First Name'%><%= f.text_field :first_name %></div>
      <div class="two columns"><%= f.label 'Last Name'%><%= f.text_field :last_name %></div>
      <div class="two columns"><%= f.label 'Phone'%><%= f.text_field :phone %></div>
      <div class="three columns"><%= f.label 'Email'%><%= f.text_field :email %></div>
  </div>
  <div class="new-item-submit row">
    <div class="twelve columns">
      <%= f.submit 'Add' %>
    </div>
  </div>
  <% end %>
  <div class="items row">
    <% @employees.each do |employee| %>
    <% if (@employees.index(employee) % 3) == 0 %>
      </div>
      <div class="items row">
    <% end %>
      <div class="four columns item-box">
        <h4><%=employee.first_name%> <%=employee.last_name%></h4>
        <h5><%=employee.position%></h5>
        <h6>Phone: <%=employee.phone%></h6>
        <h6>Email: <a href="mailto:<%=employee.email%>"><%= employee.email%></a></h6>
        <span class="item-box-link"><%= link_to 'Edit', edit_employee_path(employee)%></span>
        <span class="item-box-link"><%= link_to 'Delete', employee_path(employee), method: :delete%></span>
      </div>
    <% end %>
  </div>

</div>
